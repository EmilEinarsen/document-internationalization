{
  "compilerOptions": {
    "jsx": "preserve",
    "moduleResolution": "node",
    "target": "esnext",
    "esModuleInterop": true,
    "module": "esnext",
    "strict": true,
    "sourceMap": false,
    "inlineSourceMap": false,
    "downlevelIteration": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "outDir": "lib",
    "baseUrl": ".",
    "skipLibCheck": true,
    "isolatedModules": true,
    "checkJs": false,
    "lib": ["es2017.object", "es2017", "es2016", "es2015", "dom"]
  },
  "include": ["./styled.d.ts",  "./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["./node_modules"]
}
